<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/gradient_background">

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grafh_one"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/cardview_grafh_three"
        android:layout_marginRight="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:onClick="toindia"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/india_care"
                    >
                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="INDIAN\nStats"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="14dp"
                        >
                    </TextView>
                </LinearLayout>


            </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grafh_three"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:onClick="toworld"
        android:background="#cc9999"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/earth_care"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        >

    </ImageView>

    </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="100dp"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="World Stats"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20dp"
            >
        </TextView>
      </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grafh_two"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/cardview_grafh_three"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:onClick="tonews"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:src="@drawable/helpline"
        >
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="helpline"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14dp"
            >
        </TextView>
    </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grafh_four"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginLeft="135dp"
         android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        app:cardElevation="10dp"
        android:layout_below="@id/cardview_grafh_three"
        app:cardCornerRadius="20dp"
        android:onClick="towho"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/map_maker3"
                    >

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="containmentzones"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="14dp"
                        >
                    </TextView>
                </LinearLayout>


            </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>